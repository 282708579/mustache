#!/usr/bin/env ruby

require 'mustache'
require 'yaml'

if !$stdin.tty?
  doc = $stdin.read
  if doc =~ /^(\s*---(.*)---\s*)/m
    yaml = $2.strip
    template = doc.sub($1, '')

    YAML.each_document(yaml) do |data|
      puts Mustache.render(template, data)
    end
  else
    puts doc
  end
else
  puts <<-usage
Usage: cat data.yml template.mustache | mustache

See mustache(1) or http://defunkt.github.com/mustache/mustache.1.html
for an overview.
usage
end
